<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#1E1E1E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸ PrivacyBrowser"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Each profile = separate identity"
            android:textColor="#888888"
            android:textSize="13sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Stats bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1A237E">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”’ Isolated Cookies"
            android:textColor="#BBDEFB"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸš« Tracker Blocked"
            android:textColor="#BBDEFB"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ‘¤ Fake Fingerprint"
            android:textColor="#BBDEFB"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Profile List -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR PROFILES"
        android:textColor="#888888"
        android:textSize="11sp"
        android:letterSpacing="0.15"
        android:padding="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="12dp" />

    <!-- Add Profile Button -->
    <Button
        android:id="@+id/btnAddProfile"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:margin="16dp"
        android:text="+ NEW PRIVATE PROFILE"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="16dp" />

</LinearLayout>
